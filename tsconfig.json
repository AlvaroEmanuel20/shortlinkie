{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
